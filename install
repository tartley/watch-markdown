#!/usr/bin/env bash

sudo apt install -y falkon pandoc

(
    cd "$HOME/bin"
    ln -sf "$HOME/docs/code/supported/watch-markdown/watch-markdown" .
)

config="$HOME/.config/watch-markdown"
mkdir -p "$config"
cp github.css "$config"

desktop-file-install --dir="$HOME/.local/share/applications/" watch-markdown.desktop
